{
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "Cross-Origin-Embedder-Policy", "value": "require-corp" },
        { "key": "Cross-Origin-Opener-Policy", "value": "same-origin" }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/health", "destination": "/api/health" },
    { "source": "/api/auth/verify", "destination": "/api/auth/verify" },
    { "source": "/api/voiceover/voices", "destination": "/api/voiceover/voices" },
    { "source": "/api/voiceover/generate", "destination": "/api/voiceover/generate" },
    { "source": "/api/scene/generate", "destination": "/api/scene/generate" },
    { "source": "/api/video/generate", "destination": "/api/video/generate" },
    { "source": "/api/video/status/:jobId", "destination": "/api/video/status/[jobId]?jobId=:jobId" }
  ],
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  }
}
